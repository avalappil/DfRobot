<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#06131010"
    android:fillViewport="false">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:nestedScrollingEnabled="true">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Spinner
                    android:layout_width="319dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    style="@style/spinnerDropDownItemStyle"
                    android:layout_column="29"
                    android:layout_span="2" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:text="Connect"
                    android:id="@+id/button"
                    android:layout_column="31"
                    android:onClick="connectBluetooth"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:background="#d9534f"
                    android:textColor="#ffffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="Left"
                    android:id="@+id/a"
                    android:layout_column="29"
                    android:onClick="left"
                    android:textColor="#ffffffff"
                    android:background="#ff47b224"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:enabled="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="forward"
                    android:id="@+id/b"
                    android:layout_column="30"
                    android:background="#ff47b224"
                    android:textColor="#ffffffff"
                    android:onClick="forward"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:enabled="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="right"
                    android:id="@+id/c"
                    android:layout_column="31"
                    android:background="#ff47b224"
                    android:textColor="#ffffffff"
                    android:onClick="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="T.left"
                    android:id="@+id/button20"
                    android:layout_column="29"
                    android:background="#ff47b224"
                    android:textColor="#ffffffff"
                    android:onClick="tleft"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="stop"
                    android:id="@+id/e"
                    android:layout_column="30"
                    android:onClick="stop"
                    android:textColor="#ffffffff"
                    android:background="#ff47b224"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="T.right"
                    android:id="@+id/f"
                    android:layout_column="31"
                    android:onClick="tright"
                    android:textColor="#ffffffff"
                    android:background="#ff47b224"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="reverse"
                    android:id="@+id/button9"
                    android:layout_column="30"
                    android:background="#fff58a17"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:onClick="reverse"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="Switch to autonomous"
                    android:id="@+id/button6"
                    android:layout_column="0"
                    android:background="#d9534f"
                    style="?android:attr/buttonStyleSmall"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_span="32"
                    android:onClick="switchMode" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</ScrollView>